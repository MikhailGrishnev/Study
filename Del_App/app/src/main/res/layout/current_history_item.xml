<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/history_dishName"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardView5">

            <ImageView
                android:id="@+id/history_dish_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/response" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/history_dishName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Veggie tomato mix"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/materialCardView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_dishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_sans"
            android:text="N2000"
            android:textColor="@color/price"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/materialCardView3"
            app:layout_constraintTop_toBottomOf="@+id/history_dishName" />

        <TextView
            android:id="@+id/history_dish_itemCounter"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/counter"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/history_dishPrice"
            app:layout_constraintStart_toEndOf="@+id/history_dishPrice"
            app:layout_constraintTop_toTopOf="@+id/history_dishPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>